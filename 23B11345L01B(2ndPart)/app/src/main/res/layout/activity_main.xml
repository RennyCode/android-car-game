<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/ic_icon_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />


    </LinearLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/default_score"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_obstacle1"
        android:rotation="180"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/obj1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_obstacle2"
        android:rotation="180"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/obj2" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_obstacle3"
        android:rotation="180"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_weight="1"
        android:src="@drawable/obj3" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_obstacle4"
        android:rotation="180"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/obj1" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_obstacle5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:rotation="180"
        android:src="@drawable/obj3" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_car"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/car"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_explosion"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:src="@drawable/explosion"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green_300"
            android:text="@string/left_button"
            app:icon="@drawable/baseline_arrow_back_24"
            app:iconGravity="textStart" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green_300"
            android:text="@string/right_button"
            app:icon="@drawable/baseline_arrow_forward_24"
            app:iconGravity="textEnd" />
    </LinearLayout>
</RelativeLayout>